<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    ColumnSpacing="0"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:editors="clr-namespace:DevExpress.XamarinForms.DemoEditors;assembly=DevExpress.XamarinForms.DemoEditors"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Logify.Mobile.Controls.MenuButton">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <editors:IconView
        Grid.Column="0"
        x:Name="icon"
        Margin="24"
        x:FieldModifier="private"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="24"
        HeightRequest="24" />

    <Label
        x:Name="label"
        x:FieldModifier="private"
        FontFamily="{StaticResource BoldFont}"
        FontAttributes="Bold"
        TextColor="{DynamicResource MenuButtonsTextColor}"
        FontSize="{DynamicResource NormalFontSize}"
        Grid.Column="1"
        HorizontalOptions="Start"
        VerticalOptions="Center" />

    <editors:IconView
        x:Name="rightIcon"
        x:FieldModifier="private"
        Grid.Column="2"
        Margin="24"
        WidthRequest="14"
        HeightRequest="14"
        ImageSource="Right.svg"
        VerticalOptions="Center"
        HorizontalOptions="Center" />

</Grid>
