<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MainTheme" parent="MainTheme.Base" >
    <item name="android:textAppearanceButton">@style/ButtonTextAppearance.Material.Button</item>
  </style>
  <style name="SplashTheme.Base" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_foreground</item>
  </style>
  <style name="SplashTheme" parent="SplashTheme.Base">
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
  </style>
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">#2196F3</item>
    <item name="colorPrimaryDark">#1976D2</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    <item name="android:alertDialogTheme">@style/DialogStyle</item>
    <item name="toolbarNavigationButtonStyle">@style/fixPaddingToolbarNavigationButtonStyle</item>
    <item name="toolbarStyle">@style/noMarginToolbarStyle</item>
    <item name="android:editTextStyle">@style/commentEditText</item>
  </style>
  <style name="commentEditText" parent="@style/Widget.AppCompat.EditText">
     <item name="android:background">@android:color/transparent</item>
     <item name="android:textCursorDrawable">@null</item>
  </style>
  <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@color/colorTitleIcon</item>
  </style>
  <style name="fixPaddingToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
    <item name="android:minWidth">0dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
  </style>
  <style name="noMarginToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
    <item name="titleMargin">0dp</item>
    <item name="contentInsetStartWithNavigation">0dp</item>
    <item name="contentInsetStart">0dp</item>
  </style>
  <style name="ButtonTextAppearance.Material.Button" parent="@android:style/TextAppearance.Material.Button">
    <item name="textAllCaps">false</item>
    <item name="android:textAllCaps">false</item>
  </style>
  <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:background">@color/dialog_background</item>
  </style>
</resources>
